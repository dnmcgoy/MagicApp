<h1>New card</h1>

<% form_for(@card) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cardtype %><br />
    <%= f.text_field :cardtype %>
  </p>
  <p>
    <%= f.label :mtg_id %><br />
    <%= f.text_field :mtg_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', cards_path %>